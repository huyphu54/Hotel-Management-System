@model HotelManagement.Models.DatPhong

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h1>Chi Tiết Phiếu Thuê Phòng</h1>

<div>
   
    <dl class="row">
        <dt class="col-sm-2">
            Mã Phiếu Thuê
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaPhieuThue)
        </dd>
        <dt class = "col-sm-2">
            Họ Tên Khách Hàng
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaKhNavigation.HoTenKh)
        </dd>
        
   
        <dt class = "col-sm-2">
            Phòng
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaPhongNavigation.SoPhong)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NgayNhan)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NgayNhan)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NgayTra)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NgayTra)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GioNhan)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GioNhan)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GioTra)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GioTra)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SoNguoiO)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SoNguoiO)
        </dd>
        <dt class = "col-sm-2">
            Tình Trạng
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaTinhTrangDatNavigation.TenTinhTrangDat)
        </dd>
    </dl>
</div>




<h3>Dịch Vụ Đã Sử Dụng</h3>
<table class="table">
    <thead>
        <tr>
            <th>Tên Dịch Vụ</th>
            <th>Giá</th>
            <th>Số Lượng</th>
            <th>Thành Tiền</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>Tên Dịch Vụ</th>
            <th>Giá</th>
            <th>Số Lượng</th>
            <th>Thành Tiền</th>
        </tr>
    </tfoot>
    <tbody>
        @foreach (var dv in Model.PhongDichVus)
        {
            <tr>
                <td>@dv.MaDichVuNavigation.TenDichVu</td>
                <td>@dv.MaDichVuNavigation.Gia</td>
                <td>@dv.SoLuong</td>
                <td>@(dv.SoLuong.GetValueOrDefault() * dv.MaDichVuNavigation.Gia)</td>
            </tr>
        }
    </tbody>
</table>
<div>
   
    <a asp-action="RoomRental" asp-area="Admin" class="btn btn-primary">Back to List</a>
</div>
