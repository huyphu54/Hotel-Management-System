@using HotelManagement.Models
@model X.PagedList.IPagedList<HotelManagement.Models.DatPhongDoan>
@using X.PagedList
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "GroupRoomRental";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="m-0 font-weight-bold text-primary text-center">Phiếu Đặt Phòng Đoàn</h2>
    <a asp-action="AddGroupRental" class="btn btn-success">Tạo Phiếu Đặt Phòng Theo Đoàn</a>
</p>
  <form asp-action="GroupRoomRental" method="get">
<div id="dataTableHover_filter" class="dataTables_filter">
    <label>
        Đoàn
        <input type="search" name="searchDoan" value="@ViewBag.SearchDoan" class="form-control form-control-sm" placeholder="Nhập Tên Đoàn" aria-controls="dataTableHover">
    </label>
        <label>
            Ngày Nhận
            <input type="date" name="startDate" value="@ViewBag.StartDate?.ToString("yyyy-MM-dd")" class="form-control form-control-sm" aria-controls="dataTableHover">
        </label>
        <label>
            Ngày Trả
            <input type="date" name="endDate" value="@ViewBag.EndDate?.ToString("yyyy-MM-dd")" class="form-control form-control-sm" aria-controls="dataTableHover">
        </label>
    <button type="submit" class="btn btn-primary btn-primary">Search</button>
</div>
</form>
<p style="color:red; font-weight:bold;">@TempData["Message"]</p>
<table class="table">
    <thead class="thead-light">
        <tr>
            <th>
               Tên Đoàn
            </th>
          
