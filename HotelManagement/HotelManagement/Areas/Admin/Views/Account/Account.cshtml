@model IEnumerable<HotelManagement.Models.User>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Account";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h3 class="m-0 font-weight-bold text-primary text-center">Quản Lý Tài Khoản</h3>
<hr />
<p>
    <a asp-action="CreateAccount" class="btn btn-success">Tạo Tài Khoản</a>
</p>
<table class="table align-items-center table-flush table-hover dataTable" id="dataTableHover" role="grid" aria-describedby="dataTableHover_info">
    <thead class="thead-light">
        <tr>
            <th>
                Tài Khoản
            </th>
            
            @* <th>
                Quyền
            </th> *@
            <th>
               Nhân Viên Sử Dụng
            </th>
            <th></th>
        </tr>
    </thead>
    <tfoot >
        <tr>
            <th>
                Tài Khoản
            </th>
            
            @* <th>
                Quyền
            </th> *@
            <th>
               Nhân Viên Sử Dụng
            </th>
            <th></th>
        </tr>
    </tfoot>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TaiKhoan)
            </td>
            @* <td>
                @Html.DisplayFor(modelItem => item.MatKhau)
            </td> *@
           @*  <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td> *@
            <td>
                @Html.DisplayFor(modelItem => item.MaNvNavigation.HoTenNv)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Uid">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Uid">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Uid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
