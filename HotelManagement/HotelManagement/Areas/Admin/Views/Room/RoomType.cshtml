@model IEnumerable<HotelManagement.Models.LoaiPhong>

@{
    ViewData["Title"] = "RoomType";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h1>RoomType</h1>

<p>
    <a asp-action="AddRoomType">Create New</a>
</p>
<table class="table align-items-center table-flush table-hover dataTable" id="dataTableHover" role="grid" aria-describedby="dataTableHover_info">
    <thead class="thead-light">
        <tr>
            <th>
                Tên Loại Phòng
            </th>
            <th>
                Tiện Nghi
            </th>
            <th>
                Số Tiền Cọc
            </th>
            <th>
                Giá
            </th>
            <th></th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>
                Tên Loại Phòng
            </th>
            <th>
                Tiện Nghi
            </th>
            <th>
                Số Tiền Cọc
            </th>
            <th>
                Giá
            </th>
            <th></th>
        </tr>
    </tfoot>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenLoaiPhong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TienNghi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoTienCoc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gia)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="EditRoomType" asp-route-maLoaiPhong="@item.MaLp">Edit</a> |
                    <a class="btn btn-info" asp-action="Details" asp-route-maLoaiPhong="@item.MaLp">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-maLoaiPhong="@item.MaLp">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
