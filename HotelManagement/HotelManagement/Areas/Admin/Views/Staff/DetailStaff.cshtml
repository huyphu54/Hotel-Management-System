@model HotelManagement.Models.NhanVien
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "DetailStaff";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="m-0 font-weight-bold text-primary">Thông Tin Nhân Viên</h2>

<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2" style="display: flex; align-items: center; justify-content: center;">
            Ảnh Đại Diện
        </dt>
        <dd class="col-sm-10">
            <div class="avatar-container" style="text-align:left;">
                @if (Model.Avatar != null && Model.Avatar.Length > 0)
                {
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Avatar)" alt="Avatar" width="200" height="200" />
                }
                else
                {
                    <p>Chưa có ảnh đại diện</p>
                }
            </div>
        </dd>
        <dt class="col-sm-2">
            Họ Tên Nhân Viên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HoTenNv)
        </dd>
        <dt class="col-sm-2">
            Phòng Ban
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaPbNavigation.TenPb)
        </dd>
        <dt class="col-sm-2">
            Năm Sinh
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NamSinh)
        </dd>
        <dt class="col-sm-2">
            Giới Tính
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GioiTinh)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            Số Điện Thoại
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sdt)
        </dd>
        <dt class="col-sm-2">
            Chức Vụ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ChucVu)
        </dd>
       
    </dl>
</div>
<div>
    <a asp-action="EditStaff" asp-route-maNhanVien="@Model.MaNv" class="btn btn-warning">Chỉnh Sửa</a> |
    <a asp-action="Staff" class="btn btn-primary">Back to List</a>
</div>
